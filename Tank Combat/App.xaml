<Application x:Class="Tank_Combat.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Tank_Combat"
             xmlns:views="clr-namespace:Tank_Combat.Menu.Views"
             xmlns:viewmodels="clr-namespace:Tank_Combat.Menu.ViewModels"
             StartupUri="Menu/Views/MenuWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodels:CreditsViewModel}">
            <views:CreditsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:GameRulesViewModel}">
            <views:GameRuleView/>
        </DataTemplate>
    </Application.Resources>
</Application>
